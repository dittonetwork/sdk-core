{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM.Iterable",
      "DOM",
      "ESNext.Array",
      "ES2017.TypedArrays"
    ],
    "outDir": "./dist",
    "removeComments": true,
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "paths": {},
    "sourceMap": true,
    "sourceRoot": "/",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strict": true,

    "downlevelIteration": true,

    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react"
  },

  "include": [
    "./sandbox/**/*"
  ],

  "exclude": [
    "./node_modules/**/*",
    "./package/**/*",
    "*.config.*s",
    "*.package.*s"
  ]
}
